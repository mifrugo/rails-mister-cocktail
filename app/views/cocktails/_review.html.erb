<div class="mt-3">
  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#newReview">
    Add new review
  </button>
</div>
<div class="modal fade" id="newReview" tabindex="-1" role="dialog" aria-labelledby="newReview" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">New review</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@cocktail, @review] do |f| %>
          <%= f.input :review %>
          <%= f.input :rating %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
