<% if flash[:success] %>
  <div class="alert alert-success alert-dismissible fade" role="alert">
    <span><%= flash[:success].html_safe %></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
